# Example: ReconTrace v0.1
from transformers import AutoModelForCausalLM, AutoTokenizer
from recon_trace.tracer import ReconTracer

model_name = "sshleifer/tiny-gpt2"
tokenizer = AutoTokenizer.from_pretrained(model_name)
model = AutoModelForCausalLM.from_pretrained(model_name)

tracer = ReconTracer(model)
tracer.add_hook("transformer.h.0.mlp")
tracer.add_hook("transformer.h.0.attn")

text = "Hello world"
inputs = tokenizer(text, return_tensors="pt")["input_ids"]

output = tracer.run(inputs)
tracer.export_json("trace_output.json")
print("Trace saved!")
